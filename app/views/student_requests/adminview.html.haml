%h1 
  Admin Dashboard Page
  
= form_tag student_requests_adminview_path, :method => :get do
  Filter Requests:
  - @all_states.each do |state|
    = state
    = check_box_tag "state_sel[#{state}]", 'true', @selected[state]
  = submit_tag 'Refresh'
  
- @allcourses.each do |course|
  %h1
    Course Name #{course}
  %table#student_requests
    %thead 
      %tr
        %th UIN
        %th Full Name
        %th Major
        %th Classification
        %th Minor
        %th Course ID
        %th Section ID
        %th State
        %th Notes
        %th Action
        %th Email
      
     
    %tbody
      - @coursestudentlist[course].each do |record|
        %tr
          %td= record.uin 
          %td= record.full_name
          %td= record.major
          %td= record.classification
          %td= record.minor
          %td= record.course_id
          %td= record.section_id
          %td= record.state
          %td= record.notes
          %td
            %center
            = form_tag('/student_requests/updaterequestbyadmin', method: "put") do
              = hidden_field_tag 'id', record.request_id
              %textarea{:name => "notes_for_student", :placeholder => "Notes for student"}
              %textarea{:name => "notes_for_myself", :placeholder => "Notes for Myself"}
              = select_tag("state", options_for_select(@allAdminStates))
              = submit_tag 'Update'
          %td= mail_to record.email, "email"