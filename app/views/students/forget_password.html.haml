%h1 Reset Your Password
.forgetPWpage
  =  form_tag('/students/sent_reset_password_mail', method: :post) do
    %table{:border => "0"}
      %tr
        %td
          = label :session, :email, 'Enter your Email'
        %td
          = text_field(:session, :email, class: 'input-field',:type => "email")
          (An reset link will be sent to your email!)
    %br
    %br
    = submit_tag 'Reset'
    // = submit_tag 'Reset', :data => { confirm: 'An email will be sent to your TAMU email!'}
  = form_tag(root_path, method: :get) do
    = submit_tag  "Cancel"