%h1 Signup Page
.signuppage
  =  form_tag('/students/create', method: :post) do
    %table{:border => "0"}
      %tr
        %td
          = label :session, :name, 'Enter your name'
        %td
          = text_field(:session, :name, class: 'input-field')
      %tr
        %td
          = label :session, :uin, 'Enter your UIN'
        %td
          = text_field(:session, :uin, class: 'input-field')
      %tr
        %td
          = label :session, :uin2, 'ReEnter your UIN'
        %td
          = text_field(:session, :uin2, class: 'input-field')
      %tr
        %td
          = label :session, :email, 'Enter your email (Please enter your tamu email)'
        %td
          = text_field(:session, :email, class: 'input-field')
      %tr
        %td
          = label :session, :password, 'Enter your password'
        %td
          = password_field(:session, :password, class: 'input-field')
      %tr
        %td
          = label :session, :password2, 'ReEnter your password'
        %td
          = password_field(:session, :password2, class: 'input-field')
    %br
    %br
    = submit_tag 'Signup'